{# src/ESIEA/PlatformBundle/Resources/views/Advert/form.html.twig #}
{% form_theme deliveryform 'bootstrap_3_horizontal_layout.html.twig' %}

<div class="well">
   <div classe="form_format">
      <font color="#737373">
         <div style="text-align: center">
            <div class="progress">
               <div class="progress-bar progress-bar-info progress-bar-striped" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100" style="width: 20%"> 30 %
               </div>
            </div>
            {{ form_start(deliveryform, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(deliveryform) }}
            {{ form_row(deliveryform.fullname, { 'label': 'Nom complet' }) }}
            {{ form_row(deliveryform.adressone, { 'label': 'Adresse 1' }) }}
            {{ form_row(deliveryform.adresstwo, { 'label': 'Adresse 2', 'attr': {'placeholder': 'Écrivez "aucune" si besoin'} }) }}
            {{ form_row(deliveryform.city, { 'label': 'Ville' }) }}
            {{ form_row(deliveryform.zip, { 'label': 'ZIP' }) }}
            {{ form_row(deliveryform.telephone, { 'label': 'Téléphone' }) }}
            {{ form_end(deliveryform) }}
            {# Bouton de sauvegarde #}
         </div>
      </font>
   </div>
</div>