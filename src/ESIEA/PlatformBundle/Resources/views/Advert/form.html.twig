{# src/ESIEA/PlatformBundle/Resources/views/Advert/form.html.twig #}
{% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

<div class="well">
    <div classe="form_format">
        <font color="black">
        <div style="text-align: left">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(form) }}
            {% if form.date is defined %}
            {{ form_row(form.date) }}
            {% endif %}
            <!--Auteur-->    
            {{ form_row(form.author) }}
            <!--Nom de recette-->
                {{ form_label(form.title, "Nom de votre recette", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.title) }}
            <!--Description de la recette-->
            {# Génération de l'input. #}
            {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
            <!-- Contenu de l'annonce-->
            {{ form_label(form.content, "Décrivez votre recette", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            {{ form_errors(form.title) }}
            {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
            <!--Condition utilisation-->
            
                {% if form.published is defined %}
                {{ form_row(form.published) }}
                {% endif %}
                <font color="#F5F5F5">{{ form_row(form.image) }}                </font>
                {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                {{ form_rest(form) }}
                {{ form_end(form) }}
                {# Bouton de sauvegarde #}
          </div>
          </font>
          </div>
</div>